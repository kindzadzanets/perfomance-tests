<!-- XML (Extensible Markup Language) — текстовый формат для структурированного хранения данных.
     Документ представляет данные в виде иерархии тегов (элементов), которые образуют дерево. -->

<!-- Корневой элемент — <user>. Внутри него находятся данные о пользователе. -->

<user>
    <!-- Уникальный идентификатор пользователя -->
    <id>1</id>

    <!-- Имя пользователя -->
    <first_name>John</first_name>

    <!-- Фамилия пользователя -->
    <last_name>Doe</last_name>

    <!-- Электронная почта пользователя -->
    <email>jodo@mail.ru</email>

    <!-- Вложенный элемент address хранит информацию об адресе -->
    <address>
        <!-- Название улицы -->
        <street>Main street</street>

        <!-- Название города -->
        <city>New York</city>

        <!-- Почтовый индекс -->
        <zip>10001</zip>
    </address>
</user>
```
